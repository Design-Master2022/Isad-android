            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/image_workshop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="visible"
                android:src="@drawable/ic_workshop"
