            <TextView
                android:id="@+id/name_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program"
                android:textColor="@color/bottomNavigationTextColor"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:fontFamily="@font/regular"
                app:layout_constraintEnd_toEndOf="@id/image_program"
                app:layout_constraintStart_toStartOf="@id/image_program"
                app:layout_constraintTop_toBottomOf="@id/image_program" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_program_activated"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:theme="@style/Theme.MaterialComponents"
            app:cardBackgroundColor="@color/bottomNavigationBackgroundColor"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:theme="@style/Theme.MaterialComponents"
                app:cardBackgroundColor="@color/bottomNavigationIconRoundBackgroundColor"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_program"
                        app:tint="@color/bottomNavigationActiveTabIconColor" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Make Workshop hidden as per MS instructions 22-09-24 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layout_workshop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/bottomNavigationBackgroundColor"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
