<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:visibility="visible"
        android:background="@drawable/u_shaped_back_action_bar">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_drawer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            app:rippleColor="@color/rippleColorLightBlack"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            android:layout_gravity="center_vertical"
            android:theme="@style/Theme.MaterialComponents">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu"
                app:tint="@color/normalActionBarIconColor" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            app:rippleColor="@color/rippleColorLightBlack"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            android:layout_gravity="center_vertical"
            android:theme="@style/Theme.MaterialComponents">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                app:tint="@color/normalActionBarIconColor" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center"
                android:src="@drawable/action_bar_logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Home"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:layout_marginHorizontal="10dp"
                android:textSize="17sp"
                android:textColor="@color/actionBarTitleColor"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_notification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            app:rippleColor="@color/rippleColorLightBlack"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            android:layout_gravity="center_vertical"
            android:theme="@style/Theme.MaterialComponents">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notification"
                app:tint="@color/normalActionBarIconColor" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_tick"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="2dp"
            app:rippleColor="@color/rippleColorLightBlack"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            android:layout_gravity="center_vertical"
            android:theme="@style/Theme.MaterialComponents">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_tick"
                app:tint="@color/normalActionBarIconColor" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>