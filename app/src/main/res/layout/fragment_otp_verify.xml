<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.OtpVerifyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:src="@drawable/logo_image"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/we_have_sent_otp_at"
            android:textColor="@color/lightBlack"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents"
                app:cardBackgroundColor="@color/otpBoxBackColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_margin="7dp"
                app:cardUseCompatPadding="false">

                <EditText
                    android:id="@+id/otp_code_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/regular"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents"
                app:cardBackgroundColor="@color/otpBoxBackColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_margin="7dp"
                app:cardUseCompatPadding="false">

                <EditText
                    android:id="@+id/otp_code_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/regular"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents"
                app:cardBackgroundColor="@color/otpBoxBackColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_margin="7dp"
                app:cardUseCompatPadding="false">

                <EditText
                    android:id="@+id/otp_code_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/regular"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents"
                app:cardBackgroundColor="@color/otpBoxBackColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_margin="7dp"
                app:cardUseCompatPadding="false">

                <EditText
                    android:id="@+id/otp_code_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/regular"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/red"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="Resend 00:00"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/bold"
            android:textColor="@drawable/clickable_primary_txt_color"
            android:textSize="15sp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="50dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/primary"
            app:rippleColor="@color/rippleColorWhiteLight"
            app:cardElevation="0dp"
            android:layout_gravity="center_vertical"
            android:theme="@style/Theme.MaterialComponents">

            <TextView
                android:id="@+id/txt_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/submit"
                android:fontFamily="@font/regular"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>